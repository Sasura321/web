<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ShowSessionInfo</servlet-name>
        <servlet-class>com.sust.ShowSessionInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowSessionInfo</servlet-name>
        <url-pattern>/ShowSessionInfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GuessNumberServlet</servlet-name>
        <servlet-class>com.sust.GuessNumberServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GuessNumberServlet</servlet-name>
        <url-pattern>/GuessNumberServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckUserServlet</servlet-name>
        <servlet-class>com.sust.CheckUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckUserServlet</servlet-name>
        <url-pattern>/CheckUserServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>com.sust.HomeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/HomeServlet</url-pattern>
    </servlet-mapping>
</web-app>